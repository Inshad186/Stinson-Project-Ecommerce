  <script>
    let chartInstances = {};

  function updateChart(chartId, data, title, color) {
      const ctx = document.getElementById(chartId).getContext('2d');

      // Destroy old chart instance if it exists
      if (chartInstances[chartId]) {
          chartInstances[chartId].destroy();
      }

      // Create a new chart instance and store it in the global object
      chartInstances[chartId] = new Chart(ctx, {
          type: 'bar',
          data: {
              labels: data.map(item => item._id),
              datasets: [{
                  label: 'Total Sold',
                  data: data.map(item => item.totalSold),
                  backgroundColor: color
              }]
          },
          options: {
              title: {
                  display: true,
                  text: title
              }
          }
      });
  }

  async function fetchChartData() {
      try {
          const filter = document.getElementById('sortBy').value;
          const startDate = document.getElementById('startDate').value;
          const endDate = document.getElementById('endDate').value;
          let url = `/admin/chart-data?filter=${filter}`;

          if (filter === 'date-range') {
              url += `&startDate=${startDate}&endDate=${endDate}`;
          }

          console.log('Fetching data from:', url);

          const response = await fetch(url);
          const data = await response.json();
          console.log('Data received:', data);

          // Update tables with the fetched data
          updateTable('bestSellingProductsTableBody', data.bestSellingProducts);
          updateTable('bestSellingCategoriesTableBody', data.bestSellingCategories);
          updateTable('bestSellingBrandsTableBody', data.bestSellingBrands);

          // Update charts
          updateChart('bestSellingProductsChart', data.bestSellingProducts, 'Best Selling Products', '#FF6384');
          updateChart('bestSellingCategoriesChart', data.bestSellingCategories, 'Best Selling Categories', '#36A2EB');
          updateChart('bestSellingBrandsChart', data.bestSellingBrands, 'Best Selling Brands', '#FFCE56');

      } catch (error) {
          console.error('Error fetching chart data:', error);
      }
  }

  function updateTable(tableId, data) {
      const tableBody = document.getElementById(tableId);
      tableBody.innerHTML = '';

      data.forEach((item, index) => {
          const row = document.createElement('tr');
          row.innerHTML = `
              <td>${index + 1}</td>
              <td>${item._id}</td>
              <td>${item.totalSold}</td>
          `;
          tableBody.appendChild(row);
      });
  }

  document.getElementById('sortBy').addEventListener('change', function() {
      const filter = this.value;
      const dateInputs = document.querySelectorAll('#startDate, #endDate');
      if (filter === 'date-range') {
          dateInputs.forEach(input => input.style.display = 'inline');
      } else {
          dateInputs.forEach(input => input.style.display = 'none');
      }
      fetchChartData();
  });

  document.getElementById('filterButton').addEventListener('click', fetchChartData);

  window.onload = fetchChartData;

  </script>

