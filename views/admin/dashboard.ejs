}

.sort-by-button, .date-input {
    background-color: #f8f9fa;
    color: #333;
}

.date-input {
    max-width: 150px;
}

@media (max-width: 768px) {
    .sort-filter-buttons {
        flex-direction: column;
        align-items: flex-start;
