    font-size: 14px;
    transition: all 0.3s ease;
}

.sort-by-button:hover, .date-input:hover, .filter-button:hover {
    border-color: #999;
}

.sort-by-button:focus, .date-input:focus, .filter-button:focus {
    outline: none;
    border-color: #666;
}

.filter-button {
    background-color: #007bff;
    color: white;
    border: none;
    cursor: pointer;
}

.filter-button:hover {
    background-color: #0056b3;
}

.filter-button:active {
