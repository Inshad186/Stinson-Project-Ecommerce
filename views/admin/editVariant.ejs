                <div class="row">
                  <div class="col-12">
                    <div class="border border-3 p-4 rounded">

                      <div class="mb-3 w-100">
                        <label for="productPrice" style="color:rgb(255 255 255 / 50%);" class="form-label">Price</label>
                        <input name="salePrice" class="form-control" id="productPrice"
                          value="<%= variantToEdit.salePrice%>">
                      </div>
                      <div class="mb-3 w-100">
                        <label for="productColour" style="color:rgb(255 255 255 / 50%);"
                          class="form-label">Colour</label>
                        <input name="colour" class="form-control" id="productColour" value="<%= variantToEdit.colour%>">
                      </div>
                      <div class="mb-3 w-100">
                        <label style="color: rgb(255 255 255 / 50%);" class="form-label">Sizes and Stock</label>
                        <div id="size-stock-container">
                          <% if (variantToEdit.size && variantToEdit.size.length> 0) { %>
                            <% for(let i=0; i < variantToEdit.size.length; i++) { %>
                              <div class="d-flex mb-2">
                                <input type="text" class="form-control size-input me-2"
                                  value="<%= variantToEdit.size[i] %>" readonly>
                                <input name="stocks[]" class="form-control stock-input"
                                  value="<%= variantToEdit.stock[i] %>">
                              </div>
                              <% } %>
                                <% } %>
                        </div>
                      </div>

                      <div class="mb-3 w-100">
                        <label for="inputProductDescription" style="color: rgb(255 255 255 / 50%);"
                          class="form-label">Category Images</label>
                        <input name="image" id="image-uploadify" type="file" accept=".png,.jpeg,.jpg">
                        <div id="image-container">
                          <% if (variantToEdit.image && variantToEdit.image.length> 0) { %>
                            <% variantToEdit.image.forEach(function(imgSrc) { %>
                              <img src="<%= imgSrc %>" alt="Current Category Image"
                                style="max-width: 100%; height: 100px;">
                              <% }); %>
                                <% } %>
                        </div>
                      </div>

                    </div>
                  </div>
                  <div class="col-12 d-flex justify-content-center mt-3">
                    <button type="submit" class="btn btn-primary">Update Variant</button>
                  </div>
                </div><!--end row-->
