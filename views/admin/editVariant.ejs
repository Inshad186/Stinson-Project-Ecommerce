	<script>
	  document.getElementById("form-body").addEventListener("submit", async function (event) {
		event.preventDefault();

		const price = document.getElementById("productPrice").value;
		const colour = document.getElementById("productColour").value;
		const sizeInputs = document.querySelectorAll(".size-input");
		const stockInputs = document.querySelectorAll(".stock-input");
		const image = document.getElementById("image-uploadify").files[0];

		const sizes = [];
		const stocks = [];

		sizeInputs.forEach(input => sizes.push(input.value));
		stockInputs.forEach(input => stocks.push(input.value));

		const editUpdate = new FormData();
		editUpdate.append('salePrice', price);
		editUpdate.append('colour', colour);
		editUpdate.append('sizes', JSON.stringify(sizes));
		editUpdate.append('stocks', JSON.stringify(stocks));

		if (image) {
		  editUpdate.append('image', image);
		}

		const productId = "<%= variantToEdit._id %>";
		console.log("my product id", productId);

		try {
		  const response = await fetch(`/admin/editVariant?productId=${productId}`, {
			method: "POST",
			body: editUpdate
		  });

		  const data = await response.json();
		  console.log("Is data is getting.....", data);

		  if (data.success) {
			await Swal.fire({
			  title: "Updated",
			  text: "Variant updated successfully",
			  icon: "success"
			});
			window.location.href = "/admin/productList";
		  } else {
			await Swal.fire({
			  title: "Error",
			  text: data.message || "There was an error updating the variant",
			  icon: "error"
			});
		  }
		} catch (error) {
		  console.log(error.message);
		  await Swal.fire({
			title: "Error",
			text: "An unexpected error occurred",
			icon: "error"
		  });
		}
	  });

	</script>

