                    <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css" rel="stylesheet">
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
                    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
                    
                    <script>
                      document.addEventListener("DOMContentLoaded", function () {
                        let cropper;
                        const imageUpload = document.getElementById('image-uploadify');
                        const imagePreview = document.getElementById('image-preview');
                        const croppedImageInput = document.getElementById('croppedImage');
                    
                        imageUpload.addEventListener('change', function (event) {
                          const files = event.target.files;
                          if (files && files.length > 0) {
                            const file = files[0];
                            const reader = new FileReader();
                            reader.onload = function (e) {
                              imagePreview.src = e.target.result;
                              imagePreview.style.display = 'block';
                              if (cropper) {
                                cropper.destroy();
                              }
                              cropper = new Cropper(imagePreview, {
                                aspectRatio: 1,
                                viewMode: 1,
                                autoCropArea: 1,
                                cropBoxResizable: false,
                                crop(event) {
                                  const canvas = cropper.getCroppedCanvas();
                                  croppedImageInput.value = canvas.toDataURL('image/jpeg');
                                }
                              });
                            };
                            reader.readAsDataURL(file);
                          }
                        });
                    
                        document.getElementById("form-body").addEventListener("submit", async function (event) {
                          event.preventDefault();

                        // Clear previous error messages
                        document.querySelectorAll('.error-message').forEach(el => el.textContent = '');

                        // Perform validation
                        const name = document.getElementById('inputProductTitle').value;
                        const description = document.getElementById('inputProductDescription').value;
                        const categoryId = document.getElementById('inputProductType').value;
                        const brand = document.getElementById('productBrand').value;
                        const sizes = Array.from(document.querySelectorAll('input[name="size[]"]')).map(el => el.value);
                        const price = document.getElementById('productPrice').value;
                        const discount = document.getElementById('Discount').value;
                        const image = document.getElementById('image-uploadify').files[0];

                        let isValid = true;

                        if (!/^[A-Za-z0-9\s]{3,50}$/.test(name)) {
                          showError('name-error', 'Product name must be 3-50 characters long and can include letters, numbers, and spaces.');
                          isValid = false;
                        }
                        if (!/^[\s\S]{10,500}$/.test(description)) {
                          showError('description-error', 'Description must be 10-500 characters long.');
                          isValid = false;
                        }
                        if (!categoryId) {
                          showError('category-error', 'Category is required.');
                          isValid = false;
                        }
                        if (!/^[A-Za-z0-9\s]{2,30}$/.test(brand)) {
                          showError('brand-error', 'Brand must be 2-30 characters long and can include letters, numbers, and spaces.');
                          isValid = false;
                        }
                        if (!sizes.every(size => /^[A-Za-z0-9\s]{1,10}$/.test(size))) {
                          showError('size-error', 'Each size must be 1-10 characters long and can include letters, numbers, and spaces.');
                          isValid = false;
                        }
                        if (!/^\d+(\.\d{1,2})?$/.test(price)) {
                          showError('price-error', 'Price must be a valid number with up to 2 decimal places.');
                          isValid = false;
                        }
                        if (!/^\d+(\.\d{1,2})?$/.test(discount)) {
                          showError('discount-error', 'Discount must be a valid number with up to 2 decimal places.');
                          isValid = false;
                        }
                        if (!image) {
                          showError('image-error', 'Image is required.');
                          isValid = false;
                        }

                        if (!isValid) {
                          return;
                        }
                    
                          const formData = new FormData(event.target);
                          formData.set('croppedImage', croppedImageInput.value);
                    
                          try {
                            const response = await fetch("/admin/addProduct", {
                              method: "POST",
                              body: formData
                            });
                            const data = await response.json();
                    
                            if (data.success) {
                              const result = await Swal.fire({
                                title: "Added",
                                text: "Product added successfully",
                                icon: "success"
                              });
                              if (result.isConfirmed) {
                                window.location.href = `/admin/loadVarients/${data.productId}`;
                              } else {
                                await fetch(`/admin/deleteProduct/${data.productId}`, {
                                  method: "DELETE"
                                });
                                await Swal.fire({
                                  title: "Cancelled",
                                  text: "Product was not confirmed and has been deleted.",
                                  icon: "info"
                                });
                              }
                            } else {
                              await Swal.fire({
                                title: "Error",
                                text: "Failed to add product",
                                icon: "error"
                              });
                            }
                          } catch (error) {
                            console.error("Error:", error);
                            await Swal.fire({
                              title: "Error",
                              text: "An error occurred. Please try again later.",
                              icon: "error"
                            });
                          }
                        });

                        function showError(elementId, message) {
                          const errorElement = document.getElementById(elementId);
                          errorElement.textContent = message;
                        }
                    
                        document.querySelector('.add-size-btn').addEventListener('click', function () {
                        const sizesContainer = document.getElementById('sizes-container');
                        const newSizeInput = document.createElement('div');
                        newSizeInput.classList.add('input-group', 'mb-2');
                        newSizeInput.innerHTML = `
                          <input name="size[]" class="form-control" required>
                          <button type="button" class="btn btn-outline-danger remove-size-btn">Remove</button>
                        `;
                        sizesContainer.appendChild(newSizeInput);
                      });

                      document.getElementById('sizes-container').addEventListener('click', function (event) {
                        if (event.target.classList.contains('remove-size-btn')) {
                          event.target.closest('.input-group').remove();
                        }
                      });
                    });
                    </script>

